  Layout = "_Layout";
}

<h1>Add a new Vendor</h1>

<form action='/vendors' method='post'>
  <label for="vendorName">Vendor Name</label>
  <input if="vendorName" name="vendorName" type="text">
  <label for="vendorDescription">Vendor Description</label>
  <input if="vendorDescription" name="vendorDescription" type="text">
  <button type="submit">Add</button>
</form>

