@using PierresBakery.Models;
@{
  Layout = "_Layout";
}

<h1>Vendors</h1>

<div class="box">
@if(@Model.Count == 0)
{
  <h3>No Vendors have been Added.</h3>
}

@foreach(Vendor vendor in Model)
{
  <li class="h3"><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
}

<h3 class="btn btn-default btn-lg"><a href='/vendors/new'>Add a new Vendor</a></h3>
</div>