@using PierresBakery.Models;

@{
  Layout = "_Layout";
}

<h1>Orders for @Model["vendor"].Name </h1>
<h3>Description: @Model["vendor"].Description</h3>
<div class="box">
<ol>
  @foreach (var order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
  }
</ol>

</div>

<h3 class="btn btn-default btn-lg"><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></h3>
